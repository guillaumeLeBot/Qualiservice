{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/driver.css') }}" />
{% endblock %}

{% block title %}Loreal planing{% endblock %}

{% block body %}
{% if app.user %}
<a class="btn btn-danger" href="{{ path('app_logout') }}">Déconnectez vous {{ app.user.userIdentifier }} </a>
{# {% else %}
<a class="btn btn-success" href="{{ path('app_login') }}">Connexion</a> #}
{% endif %}
    <div class="card-deck">
        <h1>Planning Loreal</h1>
        {% for event in events %}
            <div class="card">
                
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>date prise en charge camion</th>
                                <th>Nbr de palettes</th>
                                <th>Date de contrôle marchandises</th>
                                <th>Date de validation marchandises</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{ event.title}}</td>
                                <td>{{ event.start}}</td>
                                <td>{{ event.pallets_number }}</td>
                                <td>{{ event.checkedAt }}</td>
                                <td>{{ event.validatedAt }}</td>
                            </tr>
                            
                        </tbody>
                    </table>
                    
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% extends 'base.html.twig' %}
{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<link rel="stylesheet" href="{{ asset('css/driver.css') }}" />
{% endblock %}
{% block body %}
{% block navbar %}
    {% include "./partials/_navbar.html.twig" %}
{% endblock navbar %}
<div class="card-deck">
    {% for driver in drivers %}
        <div class="card">
            <div class="card-header">{{ driver.name }}</div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>date</th>
                            <th>Nbr de palettes</th>
                            <th>Temps de déchargement estimé</th>
                            <th>Type</th>
                            <th>Marchandises</th>
                            <th>Client</th>
                            <th>Fournisseur</th>
                            <th>Bâtiment</th>
                            <th>Quai</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for event in events %}
                            {% if event.driver == driver.name %}
                            <tr>
                                <td>{{ event.start }}</td>
                                <td>{{ event.pallets_number }}</td>
                                <td>{{ event.time }}</td>
                                <td>{{ event.title }}</td>
                                <td>{{ event.description }}</td>
                                <td>{{ event.customer }}</td>
                                <td>{{ event.supplier }}</td>
                                <td>{{ event.building }}</td>
                                <td>{{ event.dock }}</td>
                            </tr>
                            {% endif%}
                        {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('app_driver_pdf', {'id': driver.id}) }}" class="btn btn-primary" onclick="printTable()">Imprimer </a>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock%}
{% block javascript%}
    <script>
        function printTable() {
            window.print();
        }        
    </script>
{% endblock %}